<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Create Form View for Manage Hall-->
    <record id="manage_hall_form_view_id" model="ir.ui.view">
        <field name="name">manage.hall.form.view</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="list_price"/>
                            <field name="is_hall_manage"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!--    Create Tree view For Manage Hall-->
    <record id="manage_hall_tree_view_id" model="ir.ui.view">
        <field name="name">manage.hall.tree.view</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="list_price"/>
            </tree>
        </field>
    </record>

    <!--    Create New Action For Product Template and change View ids.-->
    <record id="manage_hall_product_template_action" model="ir.actions.act_window">
        <field name="name">Manage Hall</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="domain">[('is_hall_manage','=', True)]</field>
        <field name="context">{'default_detailed_type': 'service','default_is_hall_manage':True}</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('manage_hall_tree_view_id')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('manage_hall_form_view_id')})]
                "/>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Manage Hall
            </p>
        </field>
    </record>

    <!--  Override base action because change base flow   -->
    <record id="sale.product_template_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="search_view_id" ref="product.product_template_search_view"/>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('product.product_template_kanban_view')}),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('product.product_template_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('product.product_template_only_form_view')})]
                "/>
        <field name="context">{"search_default_filter_to_sell":1, "sale_multi_pricelist_product_template": 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new product
            </p>
            <p>
                You must define a product for everything you sell or purchase,
                whether it's a storable product, a consumable or a service.
            </p>
        </field>
    </record>

    <!--  Create Menu for Manage Hall in configuration-->
    <menuitem id="manage_hall_menu_id" name="Manage Halls" action="manage_hall_product_template_action"
              parent="sale.menu_sale_config" sequence="11"/>
</odoo>